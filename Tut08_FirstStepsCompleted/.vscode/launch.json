            "request": "launch", 
            "preLaunchTask": "build",
            "program": "fusee",
            "args": ["player", "${workspaceRoot}/bin/Debug/Tut08_FirstStepsCompleted.dll"],
            "stopAtEntry": false,
            "console": "externalTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug in FUSEE Player (with external code)",
            "type": "coreclr",
            "request": "launch", 
            "preLaunchTask": "build",
            "program": "fusee",
            "args": ["player", "${workspaceRoot}/bin/Debug/Tut08_FirstStepsCompleted.dll"],
            "stopAtEntry": false,
            "console": "externalTerminal",
            "justMyCode": false,
            "enableStepFiltering": false
        }
